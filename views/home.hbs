<div class="row">
  <div class="col-6"><h1>Client's Job Posts</h1></div>
  <div class="col-6 d-flex justify-content-end">
    <a href = "/adduser" type="button" class="btn btn-primary align-self-center">+ create jobs</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Company Name</th>
      <th scope="col">Job Name</th>
      <th scope="col">Job Type</th>
      <th scope="col">Description</th>
      <th scope="col">Working place</th>
      <th scope="col">Offer</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.company_name}}</td>
      <td>{{this.job_name}}</td>
      <td>{{this.job_type}}</td>
      <td>{{this.description}}</td>
      <td>{{this.working_place}}</td>
      <td>{{this.offer}}</td>
      <td>
            <a href="#" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
            <a href="#" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a>
            <a href="#" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>